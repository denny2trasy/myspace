<div id="pageTitle">
		<h1>Edit <%= @post.title%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @post.object %>
    <%= link_to "Delete", :action => :delete, :id => @post.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @post.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Title: </td>
              			<td class="itemValue"><input type="text" name="post[title]" value="<%= @post.title %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Description: </td>
              			<td class="itemValue"><input type="text" name="post[description]" value="<%= @post.description %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
